{
  "name": "Simple Pomodoro Timer",
  "description": "A simple Pomodoro timer.",
  "manifest_version": 2,
  "version": "1.0.0",
  "icons": {
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
    	"scripts/event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon_16.png"
  },
  "permissions": [
    "contextMenus"
  ]
}